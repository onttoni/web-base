{ "name" : "web-base",
  "version" : "0.0.0",
  "description" : "Common Node.js modules for web-base.",
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "bootstrap": {
      "depends": [
        "jquery: jQuery"
      ]
    }
  },
  "dependencies" : {
    "angular": "latest",
    "angular-modal-service": "latest",
    "angular-route": "latest",
    "bootstrap": "latest",
    "font-awesome": "latest",
    "jquery": "latest",
    "jquery-ui": "latest",
    "mongoose": "latest"
  },
  "devDependencies": {
    "browserify": "latest",
    "browserify-shim": "latest",
    "grunt": "latest",
    "grunt-bg-shell": "latest",
    "grunt-browserify": "latest",
    "grunt-cli": "latest",
    "grunt-contrib-clean": "latest",
    "grunt-contrib-copy": "latest",
    "grunt-contrib-cssmin": "latest",
    "grunt-contrib-htmlmin": "latest",
    "grunt-contrib-jshint": "latest",
    "grunt-contrib-uglify": "latest",
    "grunt-contrib-watch": "latest",
    "grunt-html-angular-validate": "latest",
    "grunt-mkdir": "latest",
    "grunt-ng-annotate": "latest",
    "http-server": "latest"
  },
  "scripts": {
    "start": "cd build && http-server -a 127.0.0.1 -p 8000 -c-1"
  }
}
