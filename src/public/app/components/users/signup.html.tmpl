<h2>Sign up</h2>
<a ng-href="#/">Show Home</a>

<div>
  <form novalidate>
    <div class="form-group">
      <label class="">First Name</label>
      <input type="text" class="form-control" ng-model="users.added.firstName">
    </div>
    <div class="form-group">
      <label class="">Last Name</label>
      <input type="text" class="form-control" ng-model="users.added.lastName">
    </div>
    <div class="form-group">
      <label class="">Email</label>
      <input type="text" class="form-control" ng-model="users.added.email">
    </div>
    <div class="form-group">
      <label class="">Password</label>
      <input type="text" class="form-control" ng-model="users.added.password">
    </div>
    <div>
      <a ng-href="#/" class="btn btn-default" ng-click="users.signUp()"><i class="fa fa-floppy-o"></i>Save</a>
      <a ng-href="#/" class="btn btn-default"><i class="fa fa-times"></i>Cancel</a>
    </div>
  </form>
</div>
