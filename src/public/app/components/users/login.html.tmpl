<div class="modal-header">
  <button type="button" class="close" aria-hidden="true" ng-click="users.cancel()">&times;</button>
  <h4 class="modal-title">Login</h4>
</div>
<div class="modal-body">
  <form novalidate>
    <div class="form-group">
      <label class="">Email</label>
      <input type="text" class="form-control" ng-model="users.loggedIn.email" required>
    </div>
    <div class="form-group">
      <label class="">Password</label>
      <input type="password" class="form-control" ng-model="users.loggedIn.password" required>
    </div>
  </form>
</div>
<div class="modal-footer">
  <a class="btn btn-default" ng-click="users.login()"><i class="fa fa-sign-in"></i>Sign in</a>
  <a class="btn btn-default" ng-click="users.cancel()"><i class="fa fa-times"></i>Cancel</a>
  <a class="btn btn-default" ng-click="users.signUp()"><i class="fa fa-times"></i>Sign up</a>
</div>
