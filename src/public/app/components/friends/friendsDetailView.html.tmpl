<h2>Friend {{ friends.details.name }} details</h2>
<div>
  <form class="form-friend-details" novalidate>
    <div class="form-group" ng-repeat="(key, value) in friends.details" ng-if="key!='_id'">
      <label class="text-capitalize">{{ key }}</label>
      <input type="text" class="form-control" ng-model="friends.details[key]">
    </div>
    <div>
      <a ui-sref="app.friends.list" class="btn btn-default" ng-click="friends.update()"><i class="fa fa-floppy-o"></i>Save</a>
      <a ui-sref="app.friends.list" class="btn btn-default"><i class="fa fa-times"></i>Cancel</a>
    </div>
  </form>
</div>
