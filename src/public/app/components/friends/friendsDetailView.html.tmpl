<h2>Friend {{ friends.details.name }} details</h2>
<a ng-href="#/">Show home</a><a href="#/friends">Show friends</a>

<div>
  <form novalidate>
    <div class="form-group" ng-repeat="(key, value) in friends.details" ng-if="key!='_id'">
      <label class="text-capitalize">{{ key }}</label>
      <input type="text" class="form-control" ng-model="friends.details[key]">
    </div>
    <div>
      <a ng-href="#/friends" class="btn btn-default" ng-click="friends.update()"><i class="fa fa-floppy-o"></i>Save</a>
      <a ng-href="#/friends" class="btn btn-default"><i class="fa fa-times"></i>Cancel</a>
    </div>
  </form>
</div>
