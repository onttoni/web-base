<h2>Add friend</h2>
<div>
  <form name="formFriendAdd" class="form-friend-add" ng-submit="friends.save()" novalidate>
    <div class="form-group" ng-repeat="field in friends.added.displayFields()">
      <label class="text-capitalize">{{field}}</label>
      <input type="text" class="form-control" ng-model="friends.added[field]" required>
    </div>
    <div>
      <button class="btn btn-default" type="submit" ng-disabled="formFriendAdd.$invalid"><i class="fa fa-floppy-o"></i>Save</button>
      <a ui-sref="app.friends.list" class="btn btn-default"><i class="fa fa-times"></i>Cancel</a>
    </div>
  </form>
</div>
