<h2>Friends</h2>
<a class="btn btn-sm" ng-click="friends.showAddModal()"><i class="fa fa-user-plus"></i>Add a friend</a>
<div>
  <table class="table table-hover table-striped table-bordered">
    <thead>
      <tr><th>#</th><th>Name</th><th>Address</th><th>Actions</th></tr>
    </thead>
    <tbody>
      <tr ng-repeat="friend in friends.list">
        <td>{{ $index + 1 }}</td>
        <td>
          <a ui-sref="friends.details({friendId: friend._id})">{{ friend.name }}</a>
        </td>
        <td>
          {{ friend.address }}
        </td>
        <td>
          <a ng-click="friends.showDeleteModal(friend._id)" class="btn btn-default"><i class="fa fa-trash-o"></i>Delete</a>
        </td>
      </tr>
    </tbody>
  </table>
</div>
