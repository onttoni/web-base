<div class="modal-header">
  <button type="button" class="close" aria-hidden="true" ng-click="user.cancel()">&times;</button>
  <h4 class="modal-title">Sign in</h4>
</div>
<div class="modal-body">
  <form novalidate>
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" ng-model="user.loggedIn.email" required>
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" ng-model="user.loggedIn.password" required>
    </div>
  </form>
</div>
<div class="modal-footer">
  <a ng-click="user.signUp()">Sign up</a>
  <a class="btn btn-default" ng-click="user.login()"><i class="fa fa-sign-in"></i>Sign in</a>
  <a class="btn btn-default" ng-click="user.cancel()"><i class="fa fa-times"></i>Cancel</a>
</div>
